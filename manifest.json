{
    "manifest_version": 2,

    "name": "Edit Website",
    "description": "Edita sitios web con una simple extension.",
    "version": "1.0",

    "icons":{
        "16": "assets/img/icon-16.png",
        "32": "assets/img/icon-32.png",
        "64": "assets/img/icon-64.png"
    },

    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content.js"]
    }],

    "browser_action": {
        "default_icon": "assets/img/icon-32.png",
        "default_popup": "popup.html"
    }
}